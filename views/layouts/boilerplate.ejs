<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= typeof title !== 'undefined' ? title : 'Microworkout' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap (one version only) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Fonts + AOS -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

  <!-- App CSS -->
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/home.css">
</head>
<body>
  <%- include('../include/nav') %>

  <!-- Full-bleed content, no outer gutters -->
  <main class="container-fluid p-0">
    <%- body %>
  </main>

  <%- include('../include/footer') %>

  <!-- Vendor JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
  <script src="https://unpkg.com/feather-icons" defer></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" defer></script>

  <!-- App JS -->
  <script src="/home.js" defer></script>
  <script src="/wizard.js" defer></script>

  <script defer>
    document.addEventListener('DOMContentLoaded', function () {
      if (window.AOS) AOS.init({ duration: 800, easing: 'ease-in-out', once: true });
      if (window.feather && window.feather.replace) window.feather.replace();
    });
  </script>
</body>
</html>
