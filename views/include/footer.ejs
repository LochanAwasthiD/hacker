<!-- Footer -->
<footer class="bg-dark text-white py-5 mt-auto">
  <div class="container">

    <!-- Brand + socials (centered) -->
    <div class="row g-4 justify-content-center text-center">
      <div class="col-lg-10">
        <a class="d-inline-flex align-items-center text-decoration-none text-white mb-3" href="#">
          <i data-feather="activity" class="me-2" width="24" height="24"></i>
          <span class="fw-bold fs-5">Micro-Workout</span>
        </a>
        <p class="text-muted mx-auto" style="max-width:640px">
          Helping busy people stay fit with science-backed micro-workouts since 2023.
        </p>

        <div class="d-flex gap-3 justify-content-center">
          <a href="#" class="text-white"><i data-feather="facebook" width="20" height="20"></i></a>
          <a href="#" class="text-white"><i data-feather="twitter" width="20" height="20"></i></a>
          <a href="#" class="text-white"><i data-feather="instagram" width="20" height="20"></i></a>
          <a href="#" class="text-white"><i data-feather="linkedin" width="20" height="20"></i></a>
        </div>
      </div>
    </div>

    <!-- dubdcribe -->
<section id="newsletter" class="mt-4">
  <% if (q && q.sub) { %>
    <div class="container mt-3 text-center">
      <div class="alert <%= q.sub==='ok'?'alert-success':q.sub==='invalid'?'alert-warning':'alert-danger' %> py-2" role="alert">
        <%= q.sub==='ok'?'Thanks! Check your inbox.':q.sub==='invalid'?'Enter a valid email.':'Something went wrong.' %>
      </div>
    </div>
  <% } %>

  <div class="row g-4 justify-content-center text-center">
    <div class="col-12 col-lg-8">
      <h6 class="fw-bold mb-3">Subscribe to the latest fitness tips and updates delivered to your inbox.</h6>
      <form action="/newsletter/subscribe" method="POST"
            class="d-flex justify-content-center" style="max-width:540px; margin:0 auto;">
        <input type="email" name="email" class="form-control rounded-pill-start" placeholder="Your email" required>
        <button class="btn btn-primary rounded-pill-end px-4" type="submit">Subscribe</button>
      </form>
    </div>
  </div>
</section>



    <hr class="my-4 border-secondary">

    <!-- Bottom line (centered) -->
    <div class="row">
      <div class="col text-center">
        <p class="mb-0 text-muted" style="color: white !important;">&copy; 2023 Micro-Workout. All rights reserved.</p>
        <ul class="list-inline mb-0 mt-2">
          <li class="list-inline-item"><a href="#" class="text-decoration-none text-muted" style="color: white !important;">Terms</a></li>
          <li class="list-inline-item"><a href="#" class="text-decoration-none text-muted" style="color: white !important;">Privacy</a></li>
          <li class="list-inline-item"><a href="#" class="text-decoration-none text-muted" style="color: white !important;">Cookies</a></li>
        </ul>
      </div>
    </div>

  </div>
</footer>

<!-- End Footer -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const a = document.querySelector('#newsletter .alert');
    if (a) setTimeout(() => a.remove(), 5000);
  });
</script>
